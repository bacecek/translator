<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@android:color/white"
	android:clickable="true">

	<include
		layout="@layout/layout_toolbar"
		android:id="@+id/toolbar"/>

	<EditText
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/edit_search"
		android:padding="16dp"
		android:imeOptions="actionSearch"
		android:background="@null"
		android:drawableLeft="@drawable/ic_search"
		android:drawablePadding="16dp"
		android:hint="@string/hint_edit_search"
		android:textColorHint="#AFAFAF"
		app:layout_constraintTop_toBottomOf="@id/toolbar"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/btn_clear"
		app:layout_constraintHorizontal_chainStyle="spread_inside"/>

	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/btn_clear"
		style="@style/Base.Widget.AppCompat.ActionButton"
		android:src="@drawable/ic_clear"
		android:tint="#AFAFAF"
		android:visibility="invisible"
		app:layout_constraintTop_toTopOf="@id/edit_search"
		app:layout_constraintBottom_toBottomOf="@id/edit_search"
		app:layout_constraintRight_toRightOf="parent" />

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/colorBackground"
		app:layout_constraintTop_toBottomOf="@id/edit_search"/>

	<android.support.v7.widget.RecyclerView
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:id="@+id/list_favourites"
		app:layout_constraintTop_toBottomOf="@id/edit_search"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		android:visibility="gone"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/empty_view"
		android:orientation="vertical"
		android:gravity="center">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_favourites_empty"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/txt_empty_title"
			android:text="@string/empty_list_favourites"
			android:textColor="@color/colorEmptyViewText"
			android:fontFamily="sans-serif-thin"
			android:layout_marginTop="15dp"
			android:textSize="18sp"
			android:gravity="center"/>
	</LinearLayout>

</android.support.constraint.ConstraintLayout>