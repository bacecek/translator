<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.bacecek.translate">

	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:name=".App"
		android:supportsRtl="false"
		android:theme="@style/AppTheme">
		<activity
			android:name=".ui.activities.MainActivity"
			android:theme="@style/MainActivityTheme"
			android:windowSoftInputMode="stateAlwaysHidden"/>
		<activity android:name=".ui.activities.FullscreenTextActivity" />
		<activity android:name=".ui.activities.ChooseLanguageActivity" />
		<activity android:name=".ui.activities.SplashScreenActivity"
			android:theme="@style/SplashScreen">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	</application>

</manifest>